idades = novo Lista()

funcao calcularIdade(anoNascimento):
    anoAtual = 2023  
    idade = anoAtual - anoNascimento
    retorne idade

enquanto verdadeiro:
    anoNascimento = inteiro(entrada("Digite o ano de nascimento: "))


