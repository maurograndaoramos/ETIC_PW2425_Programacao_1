funcao calculadoraDistancia(distancia)
    entrada("Informe a distância percorrida em quilômetros: ", distancia)
    custo = distancia * 1.50
    se distancia > 1                #caso alguém meta um float, que represente viagens de 250 (0.25) ou 750 (0.75) metros or something like that
        imprime("O custo do transporte para {distancia} quilômetros é de {custo}€")
