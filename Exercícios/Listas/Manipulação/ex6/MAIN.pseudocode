#Encontre o maior valor em um array

funcao encontrarMaiorValor(array):
    se tamanho(array) == 0:
        imprime("O array está vazio.")
        retorne nulo

    valorMaximo = array[0]

    para cada elemento em array:
        se elemento > valorMaximo:
            valorMaximo = elemento

    retorne valorMaximo

arrayNumeros = [10, 5, 8, 15, 3, 20, 7]

maiorValor = encontrarMaiorValor(arrayNumeros)

imprime("O maior valor no array é:", maiorValor)